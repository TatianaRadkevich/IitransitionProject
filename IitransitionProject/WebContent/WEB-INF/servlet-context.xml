<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

     
     <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass"><value>org.springframework.web.servlet.view.JstlView</value></property>
        <property name="prefix"><value>/WEB-INF/pages/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean> 

    <bean id="baseDAO" class="com.itransition.itransitionproject.dao.BaseDAOImpl" />
    <bean id="comboPropertiesDAO" class="com.itransition.itransitionproject.dao.ComboPropertiesDAOImpl" />
    <bean id="schemaDAO" class="com.itransition.itransitionproject.dao.SchemaDAOImpl" />
    <bean id="thingDAO" class="com.itransition.itransitionproject.dao.ThingDAOImpl" />
    <bean id="thingOfClientDAO" class="com.itransition.itransitionproject.dao.ThingOfClientDAOImpl" />
    <bean id="userDAO" class="com.itransition.itransitionproject.dao.UserDAOImpl" />
    
    <bean id="comboPropertiesService" class="com.itransition.itransitionproject.service.ComboPropertiesServiceImpl" />
    <bean id="schemaService" class="com.itransition.itransitionproject.service.SchemaServiceImpl" />
    <bean id="thingOfClientService" class="com.itransition.itransitionproject.service.ThingOfClientServiceImpl" />
    <bean id="thingService" class="com.itransition.itransitionproject.service.ThingServiceImpl" />
    <bean id="userDetailsService" class="com.itransition.itransitionproject.service.UserDetailsServiceImpl" />
    <bean id="userService" class="com.itransition.itransitionproject.service.UserServiceImpl" />

    <bean name="/login.htm" class="com.itransition.itransitionproject.controllers.LoginController" />
    <bean name="/main.htm" class="com.itransition.itransitionproject.controllers.MainController" />
    <bean name="/page.htm" class="com.itransition.itransitionproject.controllers.PageController" />
        
       

</beans>    